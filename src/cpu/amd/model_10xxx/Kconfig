	bool
	default n

# 0: all cores
# 1: core 0 only
# 2: all but core 0
config SET_FIDVID_CORE_RANGE
	int
	default 0

endif	# SET_FIDVID

config UDELAY_LAPIC_FIXED_FSB
	int
	default 200

endif	# CPU_AMD_MODEL_10XXX
