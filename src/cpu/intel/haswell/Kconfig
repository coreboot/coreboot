	select CPU_INTEL_FIRMWARE_INTERFACE_TABLE
	select CPU_INTEL_COMMON
	select CPU_INTEL_COMMON_TIMEBASE
	select HAVE_ASAN_IN_ROMSTAGE
	select CPU_INTEL_COMMON_VOLTAGE

