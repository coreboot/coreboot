config CPU_SPECIFIC_OPTIONS
	def_bool y
	select ARCH_X86
	select MMX
	select SSE2
	select UDELAY_TSC
	select TSC_MONOTONIC_TIMER
	select SUPPORT_CPU_UCODE_IN_CBFS
	#select AP_IN_SIPI_WAIT
