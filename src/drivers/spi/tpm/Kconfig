config SPI_TPM
	bool "SPI TPM"
	depends on !PC80_SYSTEM && TPM2

config DRIVER_TPM_SPI_BUS
	hex "SPI bus TPM chip is connected to"
	default 0x0
	depends on SPI_TPM

config DRIVER_TPM_SPI_CHIP
	int "Chip Select of the TPM chip on its SPI bus"
	default 0
	depends on SPI_TPM

config MAINBOARD_HAS_SPI_TPM_CR50
	bool
	default n
	depends on SPI_TPM
