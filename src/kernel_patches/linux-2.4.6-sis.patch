+static int
+sisfb_updatevar(int con, struct fb_info * info)
+{
+	struct sisfb_info * sisfb = (struct sisfb_info *) info;
+
+	if (con == sisfb->currcon)
+		sisfb->pan_display(&fb_display[con].var, sisfb);
+
+	return 0;
+}
