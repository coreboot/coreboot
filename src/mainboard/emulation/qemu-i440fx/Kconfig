	string
	default "QEMU x86 i440fx/piix4"

config IRQ_SLOT_COUNT
	int
	default 6

config DCACHE_RAM_BASE
	hex
	default 0xd0000

config DCACHE_RAM_SIZE
	hex
	default 0x10000


