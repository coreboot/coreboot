				register "cio2_lane_endpoint[0]" = ""^I2C2.CAM0""
				register "cio2_prt[0]" = "1"
				device generic 0 on
					probe UFC UFC_MIPI_OVTI2740
					probe UFC UFC_MIPI_HI556
				end
			end
		end
		device ref pcie4_0 on
