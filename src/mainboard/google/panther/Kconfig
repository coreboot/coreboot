	string
	default "Panther"

config MMCONF_BASE_ADDRESS
	hex
	default 0xf0000000

config MAX_CPUS
	int
	default 8

config VGA_BIOS_FILE
	string
	default "pci8086,0166.rom"

config HAVE_IFD_BIN
	bool
	default n

config HAVE_ME_BIN
	bool
	default n

