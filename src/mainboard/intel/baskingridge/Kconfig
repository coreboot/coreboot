	string
	default "BASKING RIDGE"

config MMCONF_BASE_ADDRESS
	hex
	default 0xf0000000

config IRQ_SLOT_COUNT
	int
	default 18

config MAX_CPUS
	int
	default 16

config VGA_BIOS_FILE
	string
	default "pci8086,0166.rom"

