	select HAVE_SMI_HANDLER
	select MAINBOARD_HAS_CHROMEOS
	select MMCONF_SUPPORT
	select MONOTONIC_TIMER_MSR
	select SOC_INTEL_SKYLAKE

config CHROMEOS
	select CHROMEOS_RAMOOPS_DYNAMIC
