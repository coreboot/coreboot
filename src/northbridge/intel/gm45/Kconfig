	def_bool y
	select HAVE_DEBUG_RAM_SETUP
	select VGA
	select INTEL_EDID
	select INTEL_GMA_ACPI
	select INTEL_GMA_SSC_ALTERNATE_REF
	select PARALLEL_MP

