	hex "s3 volatile position"
	default 0xFFFF0000
	depends on (HAVE_ACPI_RESUME \
	&& (SOUTHBRIDGE_AMD_AGESA_HUDSON \
	|| SOUTHBRIDGE_AMD_CIMX_SB700 \
	|| SOUTHBRIDGE_AMD_CIMX_SB800 \
	|| SOUTHBRIDGE_AMD_CIMX_SB900 \
