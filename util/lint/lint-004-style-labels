# DESCR: Check that C labels begin at start-of-line

LC_ALL=C export LC_ALL
find src -name '*.[scS]' -exec grep '^[[:space:]][[:space:]]*[a-z][a-z]*:[[:space:]]*$' {} + |grep -v "[^a-z_]default:"
